@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Remove Users";
}

<h2>Role</h2>

<h4>@Html.DisplayFor(modelItem => Model.Name)</h4>

@using (Html.BeginForm("RemoveUser", "Roles"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        @Html.LabelFor(model => model.Users)<br />
        @Html.DropDownList("uid", (IEnumerable<SelectListItem>)ViewBag.StudentId)


        <div class="form-group">
            <div class="col-md-offset-0 col-md-10">
                <br />
                <input type="submit" value="Remove" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


